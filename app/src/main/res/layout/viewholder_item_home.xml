<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/green">

    <ImageView
        android:id="@+id/imagemProduto"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/encapsulado"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/nomeProduto"
        style="@style/textStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome produto"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/imagemProduto"
        app:layout_constraintStart_toStartOf="@+id/imagemProduto"
        app:layout_constraintTop_toBottomOf="@+id/imagemProduto" />

    <TextView
        android:id="@+id/precoProduto"
        style="@style/textStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/nomeProduto"
        app:layout_constraintStart_toStartOf="@+id/nomeProduto"
        app:layout_constraintTop_toBottomOf="@+id/nomeProduto" />
</androidx.constraintlayout.widget.ConstraintLayout>