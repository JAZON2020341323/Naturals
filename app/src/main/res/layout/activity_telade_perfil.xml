<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".teladeperfil.activity_telade_perfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#0B6F39">

            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/naturals" />

            <ImageView
                android:id="@+id/imgFotoPerfil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="129dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="95dp"
                android:layout_marginEnd="132dp"
                android:background="@drawable/perfil" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            android:background="#00B152"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_person_24" />

            <TextView
                android:id="@+id/textView_show_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_profile"
                android:layout_marginStart="50dp"
                android:hint="Carregando..."
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_show_full_name"
                android:layout_marginTop="10dp"
                android:background="@android:color/background_dark" />


            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/divider_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/baseline_email_24" />

            <TextView
                android:id="@+id/textView_show_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_name"
                android:layout_alignStart="@id/ic_email"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:hint="Carregando..."
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:id="@id/divider_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_show_full_name"
                android:layout_marginTop="65dp"
                android:background="@android:color/background_dark" />

            <ImageView
                android:id="@+id/ic_none"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/bt_deslogar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider_email"
                android:layout_alignStart="@+id/divider_email"
                android:layout_alignEnd="@+id/divider_email"
                android:layout_marginStart="112dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="106dp"
                android:text="Deslogar" />


        </RelativeLayout>


    </LinearLayout>


</ScrollView>